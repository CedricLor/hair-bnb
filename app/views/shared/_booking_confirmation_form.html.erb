<p><%= "#{@booking.accomodation.description}" %></p>
<p><%= "Booking from #{@booking.from} to #{@booking.to}" %></p>
<p>
  <%= "Confirmation status:"%>
  <% if @booking.accepted == false %>
    <%= "pending" %>
    <%= simple_form_for(@booking, html: { multipart: true }) do |f| %>
      <%= f.error_notification %>
      <%= f.button :submit %>
    <% end %>
  <% else %>
    <%= "accepted" %>
  <% end %>
</p>
